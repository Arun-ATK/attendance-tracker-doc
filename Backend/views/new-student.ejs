<html>
     <title>STUDENT INFO</title>
     <body>
          <div class="frame">
          <form method="post" action="/dashboard/new_class_created/new_student/information" enctype="multipart/form-data">
                    <b>STUDENT INFO</b><br><br>
                    Class id :
                    <input type="text" name="class_id" placeholder="Enter class id" />
                    <br><br>
                    <p>(rollno,name,dob(yyyy-mm-dd),year,college,email)</p>
                    <br>
                    Upload CSV :
                    <input type="file" name="csv_file" required>
                    <br><br>
                   <input type="submit" value="Upload"/>
          </form>
          </div>
     </body>
     <style>
          body{
               background:linear-gradient(#07F5F5,white);
          }
          form{
               font-family:calibri;
               font-size:25px;
               border:2px solid black;
               border-radius:50px;
               padding:50px 25px;
               background:linear-gradient(#FFC9FD,white);
          }
          .frame{
               position:absolute;
               top:50%;
               left:50%;
               transform: translate(-50%,-50%);
               text-align:center;

          }
          b{
               font-size:30px;
          }
          p{
               font-size : 17px;
          }

     </style>
</html>
